{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://example.com/employee.schema.json",
    "description": "Scheme for verification enviroment config",
    "type": "object",
    "properties": {
        "task": {
            "type": "object",
            "properties": {
                "peg": {
                    "type":"object",
                    "properties": {
                        "tool_name": {
                            "type": "string"
                        }
                    },
                    "required": ["tool_name"]
                },
                "hole": {
                    "type":"object",
                    "properties": {
                        "object_name": {
                            "type": "string"
                        }
                    },
                    "required": ["object_name"]
                },
                "complete_task_pose_tolerance":{
                    "type": "number",
                    "default": 1e-3
                },
                "terminate_force_torque":{
                    "type": "array",
                    "items":{
                        "type": "number"
                    },
                    "minItems": 6,
                    "maxItems": 6,
                    "default": [1e3, 1e3, 1e3, 1e1, 1e1, 1e1]
                }
            },
            "required": ["peg", "hole", "complete_task_pose_tolerance", "terminate_force_torque"]
        }
    },
    "required": ["task"]
    
}